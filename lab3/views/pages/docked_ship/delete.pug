extends ../../layout

block content
  div(class='col-md-6')
    form(id='docked_ship-delete-form' name='docked_ship-delete-form' class='form-horizontal' method="POST" action='')
      input(id='id' type="hidden" name='id' value=docked_ship.id class='form-control')
      div(class='form-group')
        div(class='col-md-12') Ship: #{docked_ship.ship}; Dock: #{docked_ship.dock};
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Departure

extends ../../layout

block content
    div(class='col-md-6')
        form(id='report-2-form' name='report-2-form' class='form-horizontal' method="GET" action='')
            div(class='form-group')
                div(class='col-md-3')
                    label(for='port_id') Port
                div(class='col-md-9')
                    <select id='port_id' name='port_id' class='form-control'>
                    each port in ports
                        option(value=port.id selected=(port.id == $fn.getPropOrDefault(findPort, 'port', 0))) ID:#{port.id}; Number:#{port.number}; Name:#{port.name};
                    </select>
            div(class='form-group')
                div(class='col-md-12')
                    button(type='submit' class='btn btn-primary') Create
            div(class='form-group')
                div(class='col-md-3')
                    label(for='result') Ships'n'Docks
                div(class='col-md-9')
                    <select id='result' name='result' class='form-control'>
                    each ship_and_dock in ships_in_docks
                        option Ship ID:#{ship_and_dock.ship}; Dock ID:#{ship_and_dock.dock};
                    </select>